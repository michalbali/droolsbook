<assembly>
  <id>examples</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <baseDirectory>droolsBookParent</baseDirectory>
  <moduleSets>
    <moduleSet>
      <includes>
        <include>droolsbook:bankingcore</include>
        <include>droolsbook:validation</include>
        <include>droolsbook:etl_iBatis</include>
        <include>droolsbook:dsl</include>
        <include>droolsbook:decision_tables</include>
        <include>droolsbook:ruleflow</include>
        <include>droolsbook:stateful</include>
        <include>droolsbook:cep</include>
        <include>droolsbook:droolsFlow</include>
        <include>droolsbook:sampleApplication</include>
        <include>droolsbook:testing</include>
        <include>droolsbook:integration</include>
        <include>droolsbook:performance</include>
      </includes>
      <sources>        
        <fileSets>
          <fileSet>            
            <useDefaultExcludes>true</useDefaultExcludes>
            <excludes>
              <exclude>${project.build.directory}/**</exclude>
            </excludes>
          </fileSet>
        </fileSets>
        <excludeSubModuleDirectories>false</excludeSubModuleDirectories>        
      </sources>
    </moduleSet>
  </moduleSets>
  <fileSets>
    <fileSet>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>.</outputDirectory>      
      <includes>
        <include>src</include>
        <include>licenses</include>
        <include>license.txt</include>
        <include>pom.xml</include>
        <include>README.txt</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>